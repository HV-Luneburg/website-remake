---
import { Icon } from 'astro-icon/components';

export interface Props {
  tagline?: string;
  title?: string;
  subtitle?: string;
}

const {
  tagline = "Saison 2026/27",
  title = "Gemeinsam für<br/>Lüneburg.",
  subtitle = "Die 1. Herren im Nordderby gegen den MTV Braunschweig. Sei live dabei!",
} = Astro.props;
---

<section class="relative w-full h-[85vh] min-h-[600px] overflow-hidden bg-slate-900 group">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full">
    <!-- Placeholder for an actual video file, using a generic sports background or gray fill -->
    <video 
      autoplay 
      loop 
      muted 
      playsinline 
      class="object-cover w-full h-full opacity-60 mix-blend-overlay dark:opacity-40"
      poster="/hero-image.png"
    >
      <!-- We would swap this for the actual HVL mp4 -->
      <!-- <source src="/assets/videos/hero.mp4" type="video/mp4" /> -->
    </video>
    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
  </div>

  <!-- Skyline overlay effect (Baked into the bottom) -->
  <div class="absolute bottom-0 inset-x-0 h-48 sm:h-64 pointer-events-none opacity-80" 
       style="background: url('/hero-image.png') no-repeat bottom center; background-size: cover; mix-blend-mode: screen; filter: grayscale(100%);">
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 h-full flex flex-col justify-center">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center lg:pt-16">
      
      <!-- Hero Text Setup -->
      <div class="z-10 animate-fade">
        {tagline && <p class="text-accent font-heading tracking-widest uppercase font-semibold mb-3">{tagline}</p>}
        {title && <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-black text-white leading-tight mb-4" set:html={title} />}
        {subtitle && <p class="text-lg md:text-xl text-gray-300 font-sans max-w-lg mb-8">{subtitle}</p>}
      </div>

      <!-- Floating Fixture Card -->
      <div class="z-10 justify-self-center md:justify-self-end w-full max-w-md animate-fade" style="animation-delay: 0.2s;">
        <div class="bg-white/10 dark:bg-black/40 backdrop-blur-md rounded-2xl border border-white/20 p-6 sm:p-8 shadow-2xl relative overflow-hidden group-hover:border-primary/50 transition-colors duration-500">
          
          <div class="flex justify-between items-center mb-6">
            <span class="bg-primary text-white text-xs font-bold uppercase tracking-wider px-3 py-1 rounded-full">Nächstes Heimspiel</span>
            <span class="text-gray-300 font-medium flex items-center gap-1">
              <Icon name="tabler:clock" class="w-4 h-4" />
              In 3 Tagen
            </span>
          </div>

          <div class="flex items-center justify-between gap-4 mb-6">
            <!-- HVL Logo Placeholder -->
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 sm:w-20 sm:h-20 bg-primary/20 rounded-full flex items-center justify-center p-2 mb-2">
                <Icon name="tabler:shield-checkered" class="w-10 h-10 text-primary" />
              </div>
              <span class="font-heading font-bold text-white tracking-wide">HVL</span>
            </div>

            <div class="text-3xl font-black text-gray-400">VS</div>

            <!-- Opponent Logo Placeholder -->
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 sm:w-20 sm:h-20 bg-gray-800 rounded-full flex items-center justify-center p-2 mb-2">
                <Icon name="tabler:shield" class="w-10 h-10 text-gray-400" />
              </div>
              <span class="font-heading font-bold text-gray-300 tracking-wide text-center line-clamp-1">Braunschweig</span>
            </div>
          </div>

          <div class="space-y-4">
            <div class="bg-black/30 rounded-lg p-3 text-center sm:text-left flex flex-col sm:flex-row items-center justify-between">
              <div>
                <p class="text-white font-semibold">Samstag, 19:30 Uhr</p>
                <p class="text-gray-400">Oedemer Sporthalle</p>
              </div>
              <!-- Timer visual illusion -->
              <div class="text-white font-mono font-bold tracking-widest mt-2 sm:mt-0 bg-primary/20 px-3 py-1 rounded">
                72:14:05
              </div>
            </div>

            <a href="#" class="w-full flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white font-heading font-bold uppercase tracking-wider py-4 rounded-xl transition-all shadow-lg shadow-primary/30">
              <Icon name="tabler:ticket" class="w-5 h-5" />
              Tickets kaufen
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
