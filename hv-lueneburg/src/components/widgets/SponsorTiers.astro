---
import { Icon } from 'astro-icon/components';

export interface Sponsor {
  id: string;
  name: string;
  logo: string;
  text?: string;
  link?: string;
  jobLink?: string;
}

export interface Props {
  hauptsponsoren: Sponsor[];
  partner: Sponsor[];
  foerderer: Sponsor[];
}

const {
  hauptsponsoren = [],
  partner = [],
  foerderer = []
} = Astro.props;
---

<div class="sponsoren-uebersicht max-w-7xl mx-auto px-4 sm:px-6 py-12">
  
  <!-- Hauptsponsoren (Tier 1) -->
  {hauptsponsoren.length > 0 && (
    <div class="mb-20">
      <div class="flex items-center gap-4 mb-8">
        <h3 class="text-3xl sm:text-4xl font-heading font-black">Hauptsponsoren</h3>
        <div class="h-1 flex-1 bg-gradient-to-r from-primary/50 to-transparent"></div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {hauptsponsoren.map(s => (
          <div class="flex flex-col sm:flex-row gap-6 bg-white dark:bg-slate-900 border border-gray-100 dark:border-slate-800 rounded-3xl p-8 shadow-sm hover:shadow-xl transition-shadow group">
            <div class="w-full sm:w-1/2 flex items-center justify-center bg-gray-50 dark:bg-slate-800 rounded-2xl p-6 relative">
              <img src={s.logo} alt={s.name} class="max-h-24 w-auto object-contain grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300" />
            </div>
            <div class="w-full sm:w-1/2 flex flex-col justify-center">
              <h4 class="text-2xl font-bold mb-3">{s.name}</h4>
              {s.text && <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">{s.text}</p>}
              <div class="flex flex-col gap-2 mt-auto">
                {s.link && (
                  <a href={s.link} target="_blank" rel="noopener noreferrer" class="text-sm font-semibold text-primary hover:text-primary/80 flex items-center gap-1 group-hover:gap-2 transition-all">
                    Zur Website <Icon name="tabler:arrow-right" class="w-4 h-4" />
                  </a>
                )}
                {s.jobLink && (
                  <a href={s.jobLink} target="_blank" rel="noopener noreferrer" class="text-xs font-semibold bg-gray-100 dark:bg-slate-800 text-gray-700 dark:text-gray-300 px-3 py-1.5 rounded-full inline-flex items-center gap-2 self-start hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors">
                    <Icon name="tabler:briefcase" class="w-4 h-4 text-accent" /> Aktuelle Jobangebote
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Partner (Tier 2) -->
  {partner.length > 0 && (
    <div class="mb-20">
      <div class="flex items-center gap-4 mb-8">
        <h3 class="text-2xl sm:text-3xl font-heading font-black">Partner</h3>
        <div class="h-1 w-24 bg-gray-200 dark:bg-slate-800"></div>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {partner.map(s => (
          <a href={s.link || '#'} target="_blank" rel="noopener noreferrer" class="group bg-white dark:bg-slate-900 border border-gray-100 dark:border-slate-800 rounded-2xl p-6 flex flex-col items-center justify-center aspect-[4/3] hover:border-primary/30 transition-colors hover:shadow-md">
            <img src={s.logo} alt={s.name} class="max-h-16 w-auto object-contain grayscale opacity-60 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300 mb-4" />
            <h4 class="text-sm font-bold text-center group-hover:text-primary transition-colors">{s.name}</h4>
          </a>
        ))}
      </div>
    </div>
  )}

  <!-- Förderer (Tier 3) -->
  {foerderer.length > 0 && (
    <div>
      <div class="flex items-center gap-4 mb-8">
        <h3 class="text-xl sm:text-2xl font-heading font-black text-gray-500">Förderer</h3>
      </div>
      <div class="flex flex-wrap gap-4 items-center">
        {foerderer.map(s => (
          <a href={s.link || '#'} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white text-sm sm:text-base font-semibold transition-colors bg-gray-50 dark:bg-slate-800/50 px-4 py-2 rounded-full border border-gray-100 dark:border-slate-800">
            {s.name}
          </a>
        ))}
      </div>
    </div>
  )}

</div>
