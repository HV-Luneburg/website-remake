---
import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/Grid.astro';

import { getBlogPermalink } from '~/utils/permalinks';
import { findLatestPosts } from '~/utils/blog';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';

export interface Props extends Widget {
  title?: string;
  tagline?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
  count?: number;
}

const {
  title = await Astro.slots.render('title'),
  tagline,
  linkText = 'Alle Beiträge',
  linkUrl = getBlogPermalink(),
  information = await Astro.slots.render('information'),
  count = 4,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const posts = APP_BLOG.isEnabled ? await findLatestPosts({ count }) : [];
---

{
  APP_BLOG.isEnabled ? (
    <WidgetWrapper
      id={id}
      isDark={isDark}
      containerClass={`max-w-7xl mx-auto ${(classes as Record<string, string>)?.container ?? ''}`}
      bg={bg}
    >
      <!-- Section header -->
      <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-10 gap-4">
        <div>
          {tagline && (
            <span class="heading-eyebrow">{tagline}</span>
          )}
          {title && (
            <h2
              class="section-title"
              set:html={title}
            />
          )}
          {information && (
            <p class="subheading mt-2" set:html={information} />
          )}
        </div>
        {APP_BLOG.list.isEnabled && linkText && linkUrl && (
          <a
            href={linkUrl}
            class="btn btn--outline btn--sm"
            style="flex-shrink:0;"
          >
            {linkText} →
          </a>
        )}
      </div>

      <Grid posts={posts} />
    </WidgetWrapper>
  ) : (
    <Fragment />
  )
}
